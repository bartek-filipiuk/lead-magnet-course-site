---
import "../styles/global.css";

const {
  title = "Od pomysłu do deploy",
  description = "Kurs: od pomysłu do działającej aplikacji"
} = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <header class="site-header">
      <div class="container header-wrap">
        <a href="/" class="brand">Od pomysłu do deploy</a>
        <nav>
          <a href="/">Spis lekcji</a>
          <a href="/prompt-startowy/">Prompt startowy</a>
        </nav>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <small>Devince • Kurs praktyczny • Light theme</small>
      </div>
    </footer>
  </body>
</html>
